= simple_form_for @picture do |f|
  = f.error_notification

  .form-inputs
    -#= f.input :name
    = f.input :image, as: :file
    = f.hidden_field :collection_id

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), collection_path(@picture.collection), :class => 'btn btn-default'