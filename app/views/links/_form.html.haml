= simple_form_for(@link) do |f|
  = f.error_notification

  .form-inputs
    = f.input :text
    = f.hidden_field :collection_id

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), collection_path(@link.collection), :class => 'btn btn-default'
